<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminInput.adminInput">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">
            <!--noregperkara-->
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Input Data"
                    android:textColor="@color/myred"
                    android:textSize="40dp" />

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/input_tv_lihat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="lihat"
                        android:textColor="@color/myred"
                        android:textSize="20dp" />
                </RelativeLayout>
            </LinearLayout>
            <!--nama terdakwa-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Registrasi Perkara"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:id="@+id/input_edt_noreg"
                        android:textColor="@color/myblack"
                        android:fontFamily="@font/poppins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/rounded_edittext"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pangkat dan Nama Terdakwa"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:id="@+id/input_edt_pangkatnm"
                        android:textColor="@color/myblack"
                        android:fontFamily="@font/poppins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/rounded_edittext"/>
                </LinearLayout>

                <!--            jenis pekara-->
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Satuan"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:id="@+id/input_edt_satuan"
                        android:layout_width="match_parent"
                        android:textColor="@color/myblack"
                        android:fontFamily="@font/poppins"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/rounded_edittext"/>
                </LinearLayout>
                <!--            jenis pekara-->
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pasal Perkara"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:id="@+id/input_edt_pasal"
                        android:layout_width="match_parent"
                        android:textColor="@color/myblack"
                        android:fontFamily="@font/poppins"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/rounded_edittext"/>
                </LinearLayout>

                <!--            tanggal putusan-->
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Putusan"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:id="@+id/input_edt_noputusan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/rounded_edittext"

                        android:fontFamily="@font/poppins"
                        android:textColor="@color/myblack" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Eksekusi"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:id="@+id/input_edt_noeksekusi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/rounded_edittext"

                        android:fontFamily="@font/poppins"
                        android:textColor="@color/myblack" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Rak"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:id="@+id/input_edt_norak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/myblack" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Arsip"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:id="@+id/input_edt_noarsip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/rounded_edittext"

                        android:fontFamily="@font/poppins"
                        android:textColor="@color/myblack" />
                </LinearLayout>
                <!--            tanggal arsip-->
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Arsip"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:id="@+id/input_edt_tglarsip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext"
                        android:drawableRight="@drawable/ic_baseline_date_range_24"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/poppins"
                        android:hint="12/12/2020"
                        android:padding="10dp"
                        android:textColor="@color/myblack" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/input_tvNameFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_semibold"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:layout_weight="1"
                        android:text="Unggah data yang sesuai"
                        android:textColor="@color/myred" />

                        <ImageView
                            android:layout_height="match_parent"
                            android:id="@+id/input_imgAttach"
                            android:layout_width="70dp"
                            android:padding="10dp"

                            android:src="@drawable/ic_file_"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/input_btnArsip"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_btn_red"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Arsipkan"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>