                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:fontFamily="@font/poppins"
                android:paddingRight="3dp"
                android:text="no arsip" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
